@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        @*<div asp-validation-summary="ModelOnly"></div>
        <div asp-validation-summary="None"></div>*@

        @*ditambahkan row agar responsive tetap menjadi baris*@
        <div class="mb-3 row p-1">
            @*dari pada kita membuat Label seperti ini, kita bisa mendefinisikannya pada Model dengan [DisplayName("Category Name")]*@
            @*<label class="p-0">Category Name</label>*@
            <label asp-for="Name" class="p-0"></label>
            @*asp-for disini akan merujuk ke Model yang di definiskan diatas*@
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=DisplayOrder class="p-0"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control btn-outline-primary">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>

@section scripts {
    @{
        //jika mengkonsumsi view parsial kita harus menggunakannya dengan tag partial
        <partial name="_ValidationScriptsPartial" />
    }
}